
@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.BodyClass = "ChangePW";
    ViewBag.Crumb = "變更密碼";
    ViewBag.nav = "n2";
    ViewBag.subNav = "sn2-1";
}

@section Breadcrumb {
    <li><i class="fa-caret-right"></i> 系統設定</li>
    <li><i class="fa-angle-right"></i> @ViewBag.Crumb</li>
}

<h3 class="h3">@ViewBag.Crumb</h3>

<form class="form form-sm">
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 目前密碼
        </label>
        <div class="col-xs-7">
            <input type="text" class="form-control" placeholder="請輸入目前密碼...">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 新密碼
        </label>
        <div class="col-xs-7">
            <input type="text" class="form-control" placeholder="請輸入新密碼...">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 確認新密碼
        </label>
        <div class="col-xs-7">
            <input type="text" class="form-control" placeholder="請再次輸入新密碼...">
        </div>
    </div>
    <div class="form-action">
        <button type="button" class="btn btn-primary btn-sm col-xs-offset-1">
            <i class="fa-check"></i> 存檔確認
        </button>
        <button type="button" class="btn btn-secondary btn-sm">
            <i class="fa-times"></i> 回列表
        </button>
    </div>
</form>